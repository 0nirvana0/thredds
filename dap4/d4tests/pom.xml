<build>
  <testResources>
    <testResource>
      <directory>F:\git\thredds\dap4\d4tests\src\test\resources</directory>
    </testResource>
  </testResources>

  <plugins>

      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.16</version>
        <executions>
          <execution>
            <id>default-test</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <skip>${skipTests}</skip>
              <testFailureIgnore>true</testFailureIgnore>
              <argLine>-Dfile.encoding=UTF-8</argLine>
              <encoding>UTF-8</encoding>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <skip>${skipTests}</skip>
