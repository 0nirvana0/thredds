<?xml version="1.0" encoding="UTF-8"?>
<catalog name="Unit Test Server: see thredds\tds\src\test\java\thredds\tds\TestTdsLocal.java"
         xmlns="http://www.unidata.ucar.edu/namespaces/thredds/InvCatalog/v1.0"
         xmlns:xlink="http://www.w3.org/1999/xlink">

  <service name="latest" serviceType="Resolver" base=""/>

  <service name="all" base="" serviceType="compound">
    <service name="odap" serviceType="OpenDAP" base="/thredds/dodsC/"/>
    <service name="http" serviceType="HTTPServer" base="/thredds/fileServer/"/>
    <service name="wcs" serviceType="WCS" base="/thredds/wcs/"/>
    <service name="wms" serviceType="WMS" base="/thredds/wms/"/>
    <service name="ncss" serviceType="NetcdfSubset" base="/thredds/ncss/grid/"/>
    <service name="cdmremote" serviceType="CdmRemote" base="/thredds/cdmremote/"/>
  </service>

  <!-- These are catalogs for unit testing --> 
  <datasetRoot path="unitTests" location="content/data"/>
 
  <!-- Test Single Dataset -->
  <!-- pathInfo:   /unitTests/GFS/CONUS_80km/GFS_CONUS_80km_20120419_0000.grib1.nc -->
  <dataset name="Test Single Grid Dataset" ID="testGridDataset" serviceName="all" urlPath="unitTests/GFS/CONUS_80km/GFS_CONUS_80km_20120419_0000.nc" dataType="Grid"/>
  
  <dataset name="Test Single Station Dataset" ID="testStationDataset" serviceName="all" urlPath="unitTests/point_features/metar/Surface_METAR_20130826_0000.nc" dataType="Station"/>
  

  <!-- Test Dataset Scan on Grid data-->
  <!-- pathInfo:   /testTdsScan/GFS_CONUS_80km_yyyyMMdd_HHmm.grib1.nc -->
  <datasetScan name="Test Dataset Scan" ID="testGridScan" path="testGridScan" location="content/data/GFS/CONUS_80km">
    <metadata inherited="true">
      <serviceName>all</serviceName>
      <dataType>Grid</dataType>
    </metadata>
  </datasetScan>
  
  <!-- Test Dataset Scan on Station data-->
  <!-- pathInfo:   /testTdsScan/GFS_CONUS_80km_yyyyMMdd_HHmm.grib1.nc -->
  <datasetScan name="Test Dataset Scan" ID="testStationScan" path="testStationScan" location="content/data/point_features/metar">
    <metadata inherited="true">
      <serviceName>all</serviceName>
      <dataType>Station</dataType>
    </metadata>
  </datasetScan>  
  
  
  <!-- Test Catalog for large ncss requests -->
  <!-- pathInfo:   /testNCSS/narr-TMP-200mb_221_yyyymmdd_hh00_000.grb.grb2.nc4 -->
  <!-- 
  <datasetScan name="Test Large NCSS Requests" ID="testNCSS" path="testNCSS" location="/machine/mhermida/content_test/data/models/NARR">
    <metadata inherited="true">
      <serviceName>all</serviceName>
      <dataType>Grid</dataType>
    </metadata>
  </datasetScan>  
  -->
  
  <!-- test Feature Collection (FMRD) -->
  <!--
  	pathInfo for TwoD : testGridFeatureCollection/Test_Feature_Collection_fmrc.ncd
  	pathInfo for Best : testGridFeatureCollection/Test_Feature_Collection_best.ncd
  	pathInfo for Files: testGridFeatureCollection/files/GFS_CONUS_80km_yyyyMMdd_HHmm.grib1.nc
  	pathInfo for Runs : testGridFeatureCollection/runs/GFS_CONUS_80km_RUN_yyyy-MM-ddTHH:mm:ss.000Z
  	pathInfo for ConstantForecast: ??
  	pathInfo for ConstantOffsets : testFeatureCollection/offset/Test_Feature_Collection_Offset_0.0hr
  -->
  <featureCollection featureType="FMRC" name="Test Feature Collection" path="testGridFeatureCollection">

    <metadata inherited="true">
      <serviceName>all</serviceName>
      <dataType>Grid</dataType>
    </metadata>

 	<!-- For unit testing data files are copied from resources to target. We use olderThan=0 thus the first scan finds something in the collection -->
    <collection spec="content/data/GFS/CONUS_80km/GFS_CONUS_80km_#yyyyMMdd_HHmm#.nc$" olderThan="0 min"/>
    <update startup="true" rescan="* * 0/2 * * ? *" trigger="allow"/> 
    <fmrcConfig regularize="true" datasetTypes="TwoD Best Files Runs ConstantForecasts ConstantOffsets"/>
  </featureCollection>
  
  <!-- test Point Feature Collection (Station with metar data) -->
  <!--
  		pathInfo: testStationFeatureCollection/Metar_Station_Data_fc.cdmr 
   -->
    <featureCollection name="Metar Station Data" harvest="true" featureType="Station" path="testStationFeatureCollection">
      <metadata inherited="true">
        <dataType>Station</dataType>
        <documentation type="summary">Metars: hourly surface weather observations</documentation>
        <keyword>metar</keyword>
        <keyword>surface observations</keyword>
      </metadata>

      <property name="raw" value="report"/>
      <property name="resolution" value="20 min"/>

      <collection spec="content/data/point_features/metar/Surface_METAR_#yyyyMMdd_HHmm#.nc$" />
      <update startup="true" rescan="0 0/15 * * * ? *" trigger="allow"/>
      <protoDataset choice="Penultimate" />
      <pointConfig datasetTypes="cdmrFeature Files"/>
    </featureCollection>  
  
  
  <!-- catalogRef xlink:title="Test FMRC with inner and outer NcML" xlink:href="wav_mod.xml" name=""/-->

</catalog>
